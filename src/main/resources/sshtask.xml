<?xml version="1.0" encoding="UTF-8"?>
<sshtask>
    <host>example.xyz</host>
    <users>
        <user>
            <username>runner</username>
            <password>runner</password>
        </user>
        <user>
            <username>root</username>
            <password>root</password>
        </user>
    </users>
    <commands>
        <command>
            <before>
                <clazz>CustomCmd</clazz>
                <method>stepOne</method>
            </before>
            <target>
                <username>runner</username>
                <cmd>while:sh /home/runner/start.sh:sh /home/runner/tailCheckLog.sh:wantedResult</cmd>
            </target>
        </command>
        <command>
            <before>
                <clazz>CustomCmd</clazz>
                <method>stepTwo</method>
            </before>
            <target>
                <username>root</username>
                <cmd>ls -l</cmd>
            </target>
            <after>
                <clazz>CustomCmd</clazz>
                <method>stepThree</method>
            </after>
        </command>
    </commands>
</sshtask>